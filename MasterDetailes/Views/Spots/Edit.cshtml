@model MasterDetailes.Models.Spot
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

   

<div class="form-horizontal">
    <h3>Edit Your Information</h3>
    @Html.ValidationSummary(true, "", new {@class="text-danger"})

    @Html.HiddenFor(x=>x.SpotId)
    <div class="form-group">
        @Html.LabelFor(x => x.SpotName, htmlAttributes: new {@class="form-control-label col-2"})

        <div class="col-8 mt-2 ">
            @Html.TextBoxFor(x => x.SpotName, new {htmlAttributes= new { @class="form-control"} })

        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.SpotName, "", new {@class="text-danger"})
        </div>

    </div>
    <div class="form-group">
        <div class="col-md offset-2 col-md-10 mt-2 ms-0">
            <input type="submit" value="Save Data" class="btn btn-primary" />
        </div>
       
    </div>




</div>

<div class="mt-2">
    @Html.ActionLink("BackToList", "Index", new { }, new {@class="btn btn-success"})
</div>


}
