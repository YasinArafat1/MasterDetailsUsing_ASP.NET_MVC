@model MasterDetailes.Models.Spot
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using(Html.BeginForm())
{ 
@Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Add Spots Where You wanna go.</h3>
        @Html.ValidationSummary(true, "", new {@class="text-danger"})

    <div class="form-group">
        @Html.LabelFor(x => x.SpotName, htmlAttributes: new {@class="form-control-label col-md-2"})

        <div class="col-md-8">
            @Html.EditorFor(x => x.SpotName, new {htmlAttributes=new { @class="form-control"} })

            @Html.ValidationMessageFor(x => x.SpotName, "", new {@class="text-danger"})
        </div>


    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input  type="submit" value="Create" class="btn btn-success"/>
        </div>
    </div>

    </div>


}
<div>
    @Html.ActionLink("BackToList", "Index", new { }, new {@class="btn btn-success"})
</div>
